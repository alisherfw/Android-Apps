<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/viewId"
    >

    <ImageView
        android:id="@+id/ovalimageId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/oval" />
    <ImageView
        android:id="@+id/dividerImageId"
        android:layout_width="370dp"
        android:layout_height="8dp"
        android:src="@drawable/divider"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ovalimageId"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/songNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dividerImageId"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/artistNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/songNameId"
        android:text="@string/artist_name"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />
</RelativeLayout>